<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../shared/components/headConfig.ejs') %>
    <link rel="stylesheet" href="../dist/authentication.css" />
  </head>
  <body>
    <!-- Start your project here-->

    <!-- Navbar -->
    <%- include('../shared/components/navBar.ejs') %>

    <!-- Navbar -->

    <main>
      <section id="playlist">
        <div class="container py-5">
          <div class="row">
            <!-- main video -->
            <div class="col-lg-8 col-xl-8 col-md-12 col-sm-12">
              <div class="video_container">
                <iframe
                  width="100%"
                  height="400"
                  src="<%=currentVideo.reference%>"
                  title="YouTube video player"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
              <div class="Video_Describtion my-4">
                <div class="row">
                  <div class="col-md-12">
                    <h3><%=currentVideo.title%></h3>
                  </div>
                </div>
                <hr class="hr" />
                <div class="row">
                  <h4>Description</h4>
                  <p><%=currentVideo.description%></p>
                </div>
                <hr class="hr" />
              </div>
            </div>
            <!-- the rest of playlists -->
            <div class="col-md-12 col-xl-4 col-lg-4 col-sm-12">
              <!-- first card -->
              <% for(var i=0; i < videos.length; i++) { %>
              <div
                class="card mb-1"
                style="box-shadow: none; border-radius: 0px"
              >
                <div class="row g-0">
                  <div class="col-xl-6 col-lg-6 col-md-3 col-5">
                    <a href="/playlist/1?video=<%= i %>">
                    <img
                      width="100%"
                      height="96"
                      src="<%=videos[i].video.picture%>"
                    ></img>
                    </a>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-8 col-6">
                    <div
                      class="card-body"
                      style="padding: 0.2rem 1rem 1rem 1rem"
                    >
                      <h5 class="card-title" style="font-size: 1rem">
                        <%=videos[i].video.title%>
                      </h5>
                      <p
                        class="card-text"
                        style="font-size: 13px; margin-bottom: 1px"
                      >
                        <%=videos[i].video.description%>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
              <!-- cards end -->
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer Start -->
    <%- include('../shared/components/footer.ejs') %>

    <!-- Footer End -->
    <!-- End your project here-->

    <!-- MDB -->
    <!-- <script src="../dist/authentication.js" type="text/javascript"></script> -->
    <script src="../shared/js/mdb.min.js" type="text/javascript"></script>
  </body>
</html>
